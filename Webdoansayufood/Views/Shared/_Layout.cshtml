<!DOCTYPE html>
<html>
<head>
    <title>Contact Us</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Colo Shop Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Content/aset/styles/bootstrap4/bootstrap.min.css">
    <link href="~/Content/aset/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Content/aset/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Content/aset/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/Content/aset/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" href="~/Content/aset/plugins/themify-icons/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="~/Content/aset/plugins/jquery-ui-1.12.1.custom/jquery-ui.css">
    <link rel="stylesheet" type="text/css" href="~/Content/aset/styles/contact_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/aset/styles/contact_responsive.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="super_container">

        <!-- Header -->

        <header class="header trans_300">

            <!-- Top Navigation -->

            <div class="top_nav">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="top_nav_left">Hotline: 9999 9999</div>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="top_nav_right">
                                <ul class="top_nav_menu">

                                    <!-- Language / My Account -->

                                    
                                    <li class="account">

                                        @if (!Request.IsAuthenticated)
                                        {
                                            <a href="#">
                                                Tài khoản của bạn
                                                <i class="fa fa-angle-down"></i>
                                            </a>
                                            <ul class="account_selection">
                                                <li><a href="/account/login"><i class="fa fa-sign-in" aria-hidden="true"></i>Đăng nhập</a></li>
                                                <li><a href="/account/register"><i class="fa fa-user-plus" aria-hidden="true"></i>Đăng kí</a></li>
                                            </ul>
                                        }
                                        else
                                        {
                                            <a href="#">
                                                Chào: @User.Identity.Name
                                                <i class="fa fa-angle-down"></i>
                                            </a>
                                            <ul class="account_selection">
                                                @*<li><a href="#"><i class="fa fa-user" aria-hidden="true"></i>Profile</a></li>*@
                                                <li><a href="javascript:document.getElementById('logOffForm').submit()"><i class="fa fa-sign-in" aria-hidden="true"></i>Đăng xuất</a></li>
                                            </ul>
                                        }

                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Navigation -->

            <div class="main_nav_container" style="background-color: #f3ecc0">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div class="logo_container">
                                <a href="~/home/index">SAYU<span>FOOD</span></a>
                            </div>
                            <nav class="navbar">
                                <ul class="navbar_menu">
                                    <li><a href="~/home/index">Trang Chủ</a></li>
                                    <li><a href="~/product/index">Sản Phẩm</a></li>
                                    <li><a href="~/home/contact">Liên Hệ</a></li>
                                    <li><a href="~/home/about">Giới Thiệu</a></li>
                                </ul>
                                <ul class="navbar_user">
                                    <li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>

                                    <li class="checkout">
                                        <a href="/ShoppingCart" style="background-color: #f3ecc0">
                                            <span id="checkout_items" class="checkout_items">@Html.Action("Bagcart", "ShoppingCart")</span>
                                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>


                                        </a>
                                    </li>
                                </ul>
                                <div class="hamburger_container">
                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </header>


        @RenderBody()



        <!-- Footer -->

        <footer class="footer" style="background-color: #f3ecc0">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4">
                        <h3>Liên hệ chúng tôi</h3>
                        <div>
                            <p><i class="fa fa-phone"></i>(+84) 999-9999</p>
                            <p><i class="fa fa-envelope"></i>info.Sayufood@kgmail.com</p>
                        </div>
                        <div>
                            <p><i class="fa fa-map-marker"></i>Tp.HCM</p>
                        </div>
                        <div>
                            <p><i class="fa fa-clock-o"></i> 8.00-18.00 All Day</p>
                        </div>

                    </div>
                    <div class="col-lg-4">
                        <h3>Danh mục</h3>
                        <div style="padding-bottom:8px" class="social">
                            <a href="#" style="font-size:20px ;color: #808080"><i class="fa fa-hand-o-right" aria-hidden="true"></i>Trang chủ</a>
                        </div>
                        <div style="padding-bottom:8px">
                            <a href="#" style="font-size: 20px; color: #808080"><i class="fa fa-hand-o-right" aria-hidden="true"></i>Sản phẩm</a>
                        </div>
                        <div style="padding-bottom:8px">
                            <a href="#" style="font-size: 20px; color: #808080"><i class="fa fa-hand-o-right" aria-hidden="true"></i>Liên hệ</a>
                        </div>
                        <div style="padding-bottom:8px">
                            <a href="#" style="font-size: 20px; color: #808080"><i class="fa fa-hand-o-right" aria-hidden="true"></i>Giới thiệu</a>
                        </div>

                    </div>
                    <div class="col-lg-4">
                        <h3>Theo dõi chúng tôi</h3>
                        <div class="col-lg-4">
                            <ul class="social">
                                <li style="padding:10px"><a href="#" title="Youtube"><img width="50" height="50" title="Youtube" class="lazyload loaded" src="//bizweb.dktcdn.net/100/485/131/themes/906771/assets/youtube.png?1685611862057" data-src="//bizweb.dktcdn.net/100/485/131/themes/906771/assets/youtube.png?1685611862057" data-was-processed="true"></a></li>
                                <li style="padding:10px"><a href="#" title="Google"><img width="50" height="50" title="Google" class="lazyload loaded" src="//bizweb.dktcdn.net/100/485/131/themes/906771/assets/google.png?1685611862057" data-src="//bizweb.dktcdn.net/100/485/131/themes/906771/assets/google.png?1685611862057" data-was-processed="true"></a></li>
                            </ul>
                        </div>
                        <div class="col-lg-4">
                            <ul class="social">
                                <li style="padding:10px"><a href="#" title="Zalo"><img width="50" height="50" title="Zalo" class="lazyload loaded" src="//bizweb.dktcdn.net/100/485/131/themes/906771/assets/zalo.png?1685611862057" data-src="//bizweb.dktcdn.net/100/485/131/themes/906771/assets/zalo.png?1685611862057" data-was-processed="true"></a></li>
                                <li style="padding:10px"><a href="#" title="Facebook"><img width="50" height="50" title="Facebook" class="lazyload loaded" src="//bizweb.dktcdn.net/100/485/131/themes/906771/assets/facebook.png?1685611862057" data-src="//bizweb.dktcdn.net/100/485/131/themes/906771/assets/facebook.png?1685611862057" data-was-processed="true"></a></li>
                            </ul>
                        </div>
                        </div>

                    </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer_nav_container">
                            <div class="cr">©2023 - SAYUFOOD <i class="fa fa-heart-o" aria-hidden="true"></i> distributed by <a href="https://themewagon.com">ThemeWagon</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

    </div>
    @if (Request.IsAuthenticated)
    {
        <div style="display:none">
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @id = "logOffForm" }))
            {
                @Html.AntiForgeryToken()
            }
        </div>
    }

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @*<script src="~/Scripts/jquery-3.4.1.min.js"></script>*@
    <script src="~/Content/aset/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/aset/styles/bootstrap4/popper.js"></script>
    <script src="~/Content/aset/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/Content/aset/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/Content/aset/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/Content/aset/plugins/easing/easing.js"></script>
    @*<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyCIwF204lFZg1y4kPSIhKaHEXMLYxxuMhA"></script>*@
    <script src="~/Content/aset/plugins/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
    <script src="~/Content/aset/js/contact_custom.js"></script>
    @RenderSection("scripts", required: false)
    @*<script src="~/Scripts/jsShopping.js"></script>*@
</body>
</html>